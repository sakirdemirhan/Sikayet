
@{
    ViewBag.Title = "EskiSikayetDetay";
}

@using Sikayet.App_Classes
@model Sikayet.Models.SilinmisSikayet
@{
    KullaniciGetir kg = new KullaniciGetir();
}
<div class="row col-md-12">
    <div class="col-md-6 col-md-offset-3">
        <br />
        <section class="panel">
            <header class="panel-heading">
                Silinmiş Şikayet
            </header>
            <div class="panel-body">
                <p>
                    <h3>@Model.Baslik</h3>
                </p>
                <p>
                    @Model.Aciklama
                </p>
                <p>
                    <img src="@Model.Fotograf" style="width: 500px; height: 500px" />
                </p>
                <hr />
                <span class="label label-info">Gönderme tarihi: @Model.Tarih.ToString()</span>

            </div>
            <header class="panel-heading">
                Gönderenin Bilgileri
            </header>
            <div class="panel-body">
                @if (kg.kullaniciSilinmisMi(Model.KullaniciTC) == true)
                {
                    
                    <p>
                        Ad Soyad: <b>@kg.kGetirSilinmis(Model.KullaniciTC);</b>
                    </p>
                    <p>
                        Email: <b>.</b>
                    </p>
                    <p>
                        Telefon: <b></b>
                    </p>
                }
                else
                {
                    
                    <p>
                        Ad Soyad: <b>.</b>
                    </p>
                    <p>
                        Email: <b></b>
                    </p>
                    <p>
                        Telefon: <b></b>
                    </p>

                }
                
            </div>

            <header class="panel-heading">
                Mahalle Bilgileri
            </header>
            <div class="panel-body">
                <p>
                    Sokak: <b>@Model.Sokak</b>
                </p>
                <p>
                    Mahalle: <b>@Model.Mahalle.Adi</b>
                </p>
                <p>
                    Muhtar Adı Soyadı: <b>@Model.Mahalle.Muhtar</b>
                </p>
                <p>
                    Muhtarlık Telefon: <b>@Model.Mahalle.Telefon</b>
                </p>
            </div>

           
                <header class="panel-heading">
                    Yorum
                </header>
                <div class="panel-body">
                    <h3><b>@Model.Yorum</b></h3>
                </div>
            



            <header class="panel-heading">
                Durum
            </header>
            <div class="panel-body">
                Silinmiş Şikayet

            </div>

        </section>

    </div>
</div>


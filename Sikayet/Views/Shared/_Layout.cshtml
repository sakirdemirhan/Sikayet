
@{
    Layout = null;
}

<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">
<head>
    
    @RenderSection("Scripts", false)
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <link rel="shortcut icon" href="../../Content/img/favicon.png">

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

    <!-- Bootstrap core CSS -->
    <link href="../../Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="../../Content/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="../../Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet"/>
    <!--<link href="../../Content/css/navbar-fixed-top.css" rel="stylesheet">-->

    <!-- Custom styles for this template -->
    <link href="../../Content/css/style.css" rel="stylesheet">
    <link href="../../Content/css/style-responsive.css" rel="stylesheet"/>
    
    @RenderSection("Styles", false)
</head>

<body class="full-width">

<section id="container" class="">
    
    <!--header start-->
    <header class="header white-bg" style="height: 80px">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>


            <div class="horizontal-menu navbar-collapse collapse ">
                <a href="/Home/Index" class="logo">
                    <img src="../../Content/img/sultagazi_logo.png"/>
                </a>
                <ul class="nav navbar-nav">
                @if (!HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    <li><a href="/Home/Index">Anasayfa</a></li>
                    <li><a href="/Home/Iletisim">İletişim</a></li>
                }
                else
                {
                    if (User.IsInRole("uye"))
                    {
                        <li><a href="/Home/Index">Anasayfa</a></li>
                        <li><a href="/Sikayet/SikayetEkle">Şikayet Gönder</a></li>
                        <li><a href="/Kullanici/Bilgiler">Bilgilerim</a></li>
                        <li><a href="/Home/Iletisim">İletişim</a></li>
                    }

                    else
                    {
                        <li><a href="/Home/Index">Anasayfa</a></li>
                        <li><a href="/Sikayet/SikayetListele">Şikayetleri Listele</a></li>
                        <li><a href="/Kullanici/KullaniciListele">Kullanıcılar</a></li>
                        <li><a href="/Home/Iletisim">İletişim</a></li>
                    }

                } 
                </ul>

            </div>

            <div class="top-nav ">
                <ul class="nav pull-right top-menu">
                    @if (!HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <li>
                            <li>
                                <a href="https://www.youtube.com/channel/UC35zQWlOeI8qfc6LlODj1HQ"><i class="icon-youtube"></i></a>
                            </li>
                            <li>
                                <a href="https://twitter.com/sultangazibeled"><i class="icon-twitter"></i></a>
                            </li>
                            <li>
                                <a href="https://www.facebook.com/sultangazibelediye/"><i class="icon-facebook"></i></a>
                            </li>
                            <li>
                                &nbsp;&nbsp;&nbsp;
                            </li>
                            <li>
                                <a href="/Home/KayitOl"><i class="icon-circle-arrow-right"></i> Yeni Üye Kaydı</a>
                            </li>
                        </li>
                        <!-- user login dropdown start-->
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="username">Giriş Yap</span>
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu extended">
                                <div class="log-arrow-up"></div>
                                <li><a href="/Home/GirisYap"><i class="icon-user"></i> Vatandaş Giriş</a></li>
                                <li><a href="/Home/GirisYapMod"><i class="icon-user-md"></i> Görevli Giriş</a></li>
                            </ul>
                        </li>
                        <!-- user login dropdown end -->
                    }
                    else
                    {
                        <li>
                        <li>
                            <a href="https://www.youtube.com/channel/UC35zQWlOeI8qfc6LlODj1HQ"><i class="icon-youtube"></i></a>
                        </li>
                        <li>
                            <a href="https://twitter.com/sultangazibeled"><i class="icon-twitter"></i></a>
                        </li>
                        <li>
                            <a href="https://www.facebook.com/sultangazibelediye/"><i class="icon-facebook"></i></a>
                        </li>
                            <li>
                                &nbsp;&nbsp;&nbsp;
                            </li>
                            @if (User.IsInRole("uye"))
                            {
                                <li><a href="/Kullanici/Profilim"> Hoşgeldin, @User.Identity.Name</a></li>
                            }
                            else
                            {
                                <li><a href="#"> Hoşgeldin, @User.Identity.Name</a></li>
                            }
                            
                        </li>
                        <!-- user login dropdown start-->
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">

                                <span class="username">Hesap</span>
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu extended">
                                <div class="log-arrow-up"></div>
                                @if (User.IsInRole("uye"))
                                {
                                    <li><a href="/Kullanici/Hesabim"><i class="ui-icon-key"></i> Hesap Ayarları</a></li>
                                }
                                
                                <li><a href="/Home/CikisYap"><i class="icon-signout"></i> Çıkış Yap</a></li>
                            </ul>
                        </li>
                        <!-- user login dropdown end -->

                    }
                    
                </ul>
            </div>

        </div>

    </header>
    <br />
    @RenderBody()

    <!--footer end-->
</section>

<!-- js placed at the end of the document so the pages load faster -->

<script class="include" type="text/javascript" src="../../Content/js/jquery.dcjqaccordion.2.7.js"></script>
<script type="text/javascript" src="../../Content/js/hover-dropdown.js"></script>
<script src="../../Content/js/jquery.scrollTo.min.js"></script>
<script src="../../Content/js/jquery.nicescroll.js" type="text/javascript"></script>
<script src="../../Content/js/respond.min.js" ></script>

<!--common script for all pages-->
<script src="../../Content/js/common-scripts.js"></script>
<div class="col-md-12">
    <footer class="site-footer">
        <div class="text-center">
            <p>
                © @DateTime.Now.Year.ToString() - Şakir Demirhan
                <a href="#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </p>
            
        </div>
    </footer>
</div>   

</body>
</html>
